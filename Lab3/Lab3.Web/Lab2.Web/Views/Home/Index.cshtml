@{
    ViewBag.Title = "Home Page";
}
@model Lab3.Web.Models.InputVewModel

<form id="inputForm" class="m-t-md">

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.FileInput)
                </div>
            </div>

            <div class="row m-t-n-md">
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.FileInput, new { @type = "file" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Key)
                </div>
            </div>

            <div class="row m-t-n-md">
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Key)
                </div>
            </div>
        </div>
    </div>

</form>

<div class="row">
    <div class="col-md-12">
        <button class="btn btn-default" id="encryptButton">Encrypt file</button>
    </div>
</div>