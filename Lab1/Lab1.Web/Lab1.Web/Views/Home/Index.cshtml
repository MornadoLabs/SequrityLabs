@{
    ViewBag.Title = "Home Page";
    var emptyList = new List<SelectListItem>();
    var variants = (List<SelectListItem>) ViewBag.Variants ?? emptyList;
}

@model Lab1.Web.Models.InputViewModel
<div class="row m-md">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <form id="inputForm">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Label("Input type: ")
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.InputType, true)
                                    Variants
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.InputType, false)
                                    Manual input
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row @(Model.InputType ? "" : "display-hide")" id="variantInputRow">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.Variant)
                        </div>
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.Variant, variants)
                        </div>
                    </div>

                    <div id="manualInputRow" class="@(!Model.InputType ? "" : "display-hide")">
                        <div class="row">
                            <div class="col-md-1">
                                @Html.LabelFor(m => m.ManualInput.A)
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(m => m.ManualInput.A)
                                @Html.ValidationMessageFor(m => m.ManualInput.A)
                            </div>
                            <div class="col-md-1">
                                @Html.LabelFor(m => m.ManualInput.C)
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(m => m.ManualInput.C)
                                @Html.ValidationMessageFor(m => m.ManualInput.C)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1">
                                @Html.LabelFor(m => m.ManualInput.M)
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(m => m.ManualInput.M)
                                @Html.ValidationMessageFor(m => m.ManualInput.M)
                            </div>
                            <div class="col-md-1">
                                @Html.LabelFor(m => m.ManualInput.X0)
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(m => m.ManualInput.X0)
                                @Html.ValidationMessageFor(m => m.ManualInput.X0)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.OutputSize)
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.OutputSize)                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">@Html.ValidationMessageFor(m => m.OutputSize)</div>
                    </div>

                    <div class="row">
                        <button class="col-md-offset-4 col-md-4" type="submit">OK</button>
                    </div>
                </form>
                <div class="row">
                    <div class="col-md-4">@Html.Label("Period")</div>
                    <div class="col-md-4 text-left">@Html.Label(" ", new { @id = "period" })</div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextArea("outputScreen", new { @id = "outputScreen", @disabled = true })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <button class="btn btn-lg page-btn glyphicon glyphicon glyphicon-fast-backward" id="firstPage" disabled></button>
                        <button class="btn btn-lg page-btn glyphicon glyphicon-chevron-left" id="prevPage" disabled></button>
                    </div>
                    <div class="col-md-4 text-center p-t">
                        @Html.Label(" ", new { @id = "pageNumber" })
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-lg page-btn glyphicon glyphicon-chevron-right" id="nextPage" disabled></button>
                        <button class="btn btn-lg page-btn glyphicon glyphicon-fast-forward" id="lastPage" disabled></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>