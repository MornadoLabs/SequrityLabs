@{
    ViewBag.Title = "Home Page";
}
@model Lab5.Web.Models.InputVewModel

<form id="inputForm" class="m-t-md">

    <div class="row">

        <div class="col-md-6">

            <div class="row">
                <div class="col-md-12">
                    <div class="radio">
                        <label>
                            Manual input
                            @Html.RadioButtonFor(model => model.IsManualInput, true)
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            File input
                            @Html.RadioButtonFor(model => model.IsManualInput, false)
                        </label>
                    </div>
                </div>
            </div>

            <div class="row nonmanual">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.FileInput)
                    @Html.TextBoxFor(model => model.FileInput, new { @type = "file" })
                </div>
            </div>

            <div class="row manual">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.InputText)
                    @Html.TextBoxFor(model => model.InputText)
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label>Result:</label>
                    <label id="resultSignature"></label>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button class="btn btn-info" id="signButton">Create signature</button>
                    <button class="btn btn-info" id="saveButton">Save signature</button>
                </div>
            </div>
            
        </div>

        <div class="col-md-6">

            <div class="row">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.FileInputSignature)
                    @Html.TextBoxFor(model => model.FileInputSignature, new { @type = "file" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-info" id="checkButton">Check signature</button>
                </div>
            </div>

        </div>

    </div>

</form>